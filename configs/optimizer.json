{
    "general":
    {
        "dataset": "AWA2",
        "num_shots": 0
    },

    "architecture": {
        "embeddings_dim": 200,
        "cnn_hidden_layers": "[2000]",
        "att_hidden_layers": "[2000]"
    },

    "embeddings":
    {
        "num_epochs": 100,
        "batch_size": 50,

        "optimizer":
        {
            "name": "Adam",
            "settings": 
            {
                "lr": [1e-5, 3e-5, 1e-4, 3e-4, 1e-3, 3e-3, 1e-2],
                "amsgrad": [true, false]
            }
        }
    },

    "classifier": {
        "num_epochs": 100,
        "batch_size": 100,
        "num_seen":   200,
        "num_unseen": 400,
        "early_stop": 4,
        "top_k_acc":  1
    }
}