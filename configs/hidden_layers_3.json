{
    "general":
    {
        "dataset": "AWA2",
        "num_shots": 0
    },

    "architecture": {
        "embeddings_dim": 200,
        "cnn_hidden_layers": ["[500, 500]", "[1000, 1000]", "[1500, 1500]", "[2000, 2000]"],
        "att_hidden_layers": ["[500]", "[1000]", "[1500]", "[2000]"]
    },

    "embeddings":
    {
        "num_epochs": 100,
        "batch_size": 50,

        "optimizer":
        {
            "name": "Adam",
            "settings": 
            {
                "lr": 0.00015,
                "amsgrad": true
            }
        }
    },

    "classifier": {
        "num_epochs": 100,
        "batch_size": 100,
        "num_seen":   100,
        "num_unseen": 200,
        "early_stop": 4,
        "top_k_acc":  1
    }
}